{
  "manifest_version": 3,
  "name": "Ctrl+Mayusc+E Shortcut Extension",
  "description": "Abre una URL específica cuando presionas Ctrl+Mayusc+E",
  "version": "1.0",
  "permissions": ["tabs"],
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "open_url": {
      "suggested_key": {
        "default": "Ctrl+Mayús+E",
        "windows": "Ctrl+Mayús+E",
        "mac": "Command+Mayús+E",
        "chromeos": "Ctrl+Mayús+E",
        "linux": "Ctrl+Mayús+E"
      },
      "description": "Abrir una URL con Ctrl+Mayusc+E"
    }
  }
}
